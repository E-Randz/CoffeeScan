<% include partials/header %>


<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to CoffeeScan</h1>
      <p>View our coffeeshop picks for Manchester!</p>
      <p>
        <a class="btn btn-primary btn-large" href="/coffeeshops/new">Add New Coffeeshop</a>
      </p>
    </div>
  </header>


  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Coffeeshops</h3>
    </div>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% coffeeshops.forEach(function(coffeeshop){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= coffeeshop.image %>">
          <div class="caption">
            <h4><%= coffeeshop.name %></h4>
          </div>
          <p>
            <a href="/coffeeshops/<%= coffeeshop._id %>" class="btn btn-primary">Read More</a>
          </p>
        </div>
      </div>
      <% }); %>

    </div>
  </div>





<% include partials/footer %>
